{
    "name": "haxe-electron-boilerplate",
    "author": "Novout",
    "version": "0.1.0",
    "license": "MIT",
    "description": "Boilerplate application",
    "main": "dist/main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "dependencies": {
        "electron": "^9.4.0",
        "electron-builder": "^22.6.0",
        "electron-json-storage": "^4.1.8"
